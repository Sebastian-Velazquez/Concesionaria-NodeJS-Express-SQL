<div class="container">
    <form action="/users/login" method="post" class="form-user-login"><br><br>
        <div class="card">
            <a class="login">Ingresá!</a>
            <div class="inputBox">
                <input name="email" id="email" type="email" required="required">
                <span class="user">Email</span>
            </div>
        
            <div class="inputBox">
                <input name="password" id="password" type="password" required="required">
                <span class="user">Contrasena</span>
            </div>

            <div class="login-checkbox">
                <p>Recordar usuario</p>
                <input type="checkbox" name="remember" id="cbx" style="display: none;">
                <label for="cbx" class="check">
                    <svg width="18px" height="18px" viewBox="0 0 18 18">
                        <path d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z"></path>
                        <polyline points="1 9 7 14 15 4"></polyline>
                    </svg>
                </label>
            </div>
            
            <!-- Validacion de Email -->
            <% if (locals.errors && errors.email){ %>
                <p class="alertError"><%= errors.email.msg %> </p>
            <% } %>

            <button type="submit" class="enter">Enviar</button>
        </div>
    </form>
</div>


