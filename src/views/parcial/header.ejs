<header>
    <section id="headerTop">
        <div class="figure-logo">
            <a href="/" class="logoIKA">
                <img src="/img/LogoIKA.png"  alt="logo">
            </a>
        </div>

        <div class="search-header">
            <form action="/search" method="GET">
                <div class="search-bar">
                    <svg class="icon" aria-hidden="true" viewBox="0 0 24 24"><g><path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path></g></svg>
                    <input placeholder="Buscar" type="search" class="input" name="search">
                </div>
            </form>
        </div>    

        <button id="lista-hamburguesa">
            <i class="fa-sharp fa-solid fa-bars lista-hamburguesa"> </i>
        </button >

        <div id="content-navBar">
            <ul class="navBar">
                <% if (locals.isLogged && locals.userLogged.id_category===1) { %>  
                <li class="navBar-lista">
                    <a href="/product/create">Crear Producto</a>
                </li>
                <% } %> 
                <li class="navBar-lista">
                    <a href="/product/list">Todos los Productos</a>
                </li>

                <% if (locals.isLogged) { %>    
                    <li class="navBar-lista"><a href="/users/userProfile">
                        <img src="/img/avatar/<%= locals.userLogged.image %>" class="avatar"><%= locals.userLogged.first_name +' '+  locals.userLogged.last_name %></a>
                    </li>
                    <li class="navBar-lista">
                        <a href="/users/logout">Salir</a>
                    </li>
                <% }else { %> 
                    <li class="navBar-lista">
                        <a href="/users/register">Registrate</a>
                    </li>
                    <li class="navBar-lista">
                        <a href="/users/login">Ingres√°</a>
                    </li>
                    <% } %> 
                    <li class="navBar-lista">
                        <a href="/product/productCart">Carrito</a>
                    </li>
            </ul>
        </div>


    </section>  
    <div class="content-banner">
        <img src="/img/index/banner.jpg" class="img-banner">
        <div class="bar left"></div>
        <div class="bar top"></div>
        <div class="bar right"></div>
        <div class="bar bottom"></div>
    </div>
    <script src="/js/header.js"></script>
</header>